{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "paths": {
      "@/*": ["./src/*"],
    },
    "module": "CommonJS",
    "target": "ES2017",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
}
