{
    "root": true,
    "noInlineConfig": true,
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "ignorePatterns": [
        "**/*.config.ts",
        "**/*.config.js",
        "node_modules",
        "dist",
        "*.d.ts"
    ],
    "env": {
        "es6": true,
        "node": true
    },
    "rules": {
        "indent": "off",
        "@typescript-eslint/indent": "off"
    }
}
